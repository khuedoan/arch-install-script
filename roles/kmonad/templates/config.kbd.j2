(defcfg
  ;; TODO use systemd instantiated service on new kmonad version with --input option
  input  (device-file "/dev/input/by-id/usb-RONGYUAN_2.4G_Wireless_Device-if02-event-kbd")
  output (uinput-sink "Internal keyboard")
  fallthrough true
  allow-cmd false
)

(defalias
  xcp (tap-hold-next 500 esc lctl)
  fn  (layer-toggle function)
  qwe (layer-switch qwerty)
  gam (layer-switch gaming)
)

(defsrc
  esc  1    2    3    4    5    6    7    8    9    0    -    =    bspc
  tab  q    w    e    r    t    y    u    i    o    p    [    ]    \
  caps a    s    d    f    g    h    j    k    l    ;    '    ret
  lsft z    x    c    v    b    n    m    ,    .    /    rsft
  lctl lmet lalt           spc            ralt rctl
)

(deflayer qwerty
  grv  1    2    3    4    5    6    7    8    9    0    -    =    bspc
  tab  q    w    e    r    t    y    u    i    o    p    [    ]    \
  @xcp a    s    d    f    g    h    j    k    l    ;    '    ret
  lsft z    x    c    v    b    n    m    ,    .    /    rsft
  lctl lalt lmet           spc            @fn  rctl
)

(deflayer gaming
  esc  1    2    3    4    5    6    7    8    9    0    -    =    bspc
  tab  q    w    e    r    t    y    u    i    o    p    [    ]    \
  lctl a    s    d    f    g    h    j    k    l    ;    '    ret
  lsft z    x    c    v    b    n    m    ,    .    /    rsft
  lctl lalt lmet           spc            @fn  rctl
)

